<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.appspot.wecookbob.DisplayAddFriendActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="19dp"
        android:orientation="vertical" >


	<LinearLayout 
	    android:id="@+id/sendFirstBob" 
	    android:layout_width="match_parent" 
	    android:layout_height="wrap_content" 
	    android:background="@drawable/main_list_label"
	    >
	
	    <TextView 
	        android:id="@+id/sendFirstBobTitle" 
	        android:layout_width="dp" 
	        android:layout_height="wrap_content" 
	        android:layout_marginBottom="5dip" 
	        android:layout_marginLeft="3dip" 
	        android:layout_marginTop="10dip" 
	        android:layout_weight="0.5" 
	        android:text="@string/send_first_bob" 
	        android:textColor="#90000000" 
	        android:textSize="8pt" />
	    
	</LinearLayout>

            
        
       	<ListView 
       	    android:id="@+id/sendFirstBobList" 
       	    android:layout_width="fill_parent" 
       	    android:layout_height="wrap_content"
       	    android:layout_marginBottom="100dip" 
       	    >
		</ListView>

            <LinearLayout
                android:id="@+id/inviteFriend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/main_list_label" >

                <TextView
                    android:id="@+id/friendsToInviteList"
                    android:layout_width="dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dip"
                    android:layout_marginLeft="3dip"
                    android:layout_marginTop="10dip"
                    android:layout_weight="0.5"
                    android:text="@string/friends_to_invite_list"
                    android:textColor="#90000000"
                    android:textSize="8pt" />
            </LinearLayout>

    <ListView 
        android:id="@+id/FriendsToInvitelistView" 
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content">
	</ListView>
            
    
            </LinearLayout>

</RelativeLayout>