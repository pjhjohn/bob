<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
	android:background="#ffffff"
    
    tools:context="com.appspot.wecookbob.BobMainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#90000000"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <Switch
            android:id="@+id/alam_switch"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="80dp"
            android:layout_weight="0.5"
            android:gravity="center|right"
            android:switchMinWidth="0dp"
            android:switchTextAppearance="@style/switchTextAppearance"
            android:text="@string/notify_message"
            android:textColor="#ffffff"
            android:textSize="7pt"
            android:thumb="@drawable/switch_thumb_bg"
            android:thumbTextPadding="8dp"
            android:track="@drawable/switch_track_bg" />

        <Switch
            android:id="@+id/status_switch"
            android:layout_width="dp"
            android:layout_height="match_parent"
            android:layout_marginRight="23dp"
            android:layout_weight="0.5"
            android:gravity="center|right"
            android:switchMinWidth="0dp"
            android:switchTextAppearance="@style/switchTextAppearance"
            android:text="@string/state"
            android:textColor="#ffffff"
            android:textOff="@string/state_FULL"
            android:textOn="@string/state_HUNGRY"
            android:textSize="7pt"
            android:thumb="@drawable/switch_thumb_bg"
            android:thumbTextPadding="8dp"
            android:track="@drawable/switch_track_bg" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        android:gravity="center_vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="13dip"
            android:layout_marginRight="13dip"
            android:background="@drawable/main_list_label"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/MainFriendList"
                android:layout_width="dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dip"
                android:layout_marginLeft="8dip"
                android:layout_marginTop="10dip"
                android:text="@string/main_friend_list"
                android:textColor="#90000000"
                android:textSize="8pt" />

            <ImageButton
                android:id="@+id/addFirendBtn"
                android:layout_width="wrap_content"
				android:background="@null"	
				android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:src="@drawable/add_friend" 
                android:onClick="showAddFriendTab"
                />
            
        </LinearLayout>
                
	</LinearLayout>
		<ListView
		android:id="@+id/lv_bob_log"
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"></ListView>
	    
</LinearLayout>